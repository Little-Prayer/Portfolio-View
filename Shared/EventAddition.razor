@inject HttpClient Http

<p>イベント日付：<input type="date" @bind="_event!.Date"></p>
<p>メモ：<textarea @bind="_event.Memo" /></p>

<p><button class="btn editbtn" @onclick=@(()=> CallBack.InvokeAsync(_event))>確定</button></p>
<p><button class="btn cancelbtn" @onclick=@(()=> CallBack.InvokeAsync(null))>キャンセル</button></p>

@code {
    [Parameter]
    public EventCallback<Event> CallBack { get; set; }

    private Event? _event;

    protected override void OnParametersSet()
    {
        _event = new Event();
        _event.Date = DateTime.Today;
    }
}
